<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Phone Number"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneEditText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/numberRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- FAB for opening dialer pad -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_dialpad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- Include the dialer layout -->
    <RelativeLayout
        android:id="@+id/rlDailerView"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fabDialer"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="16dp"
            android:textSize="18sp"
            android:gravity="start"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumberEditText"
            android:rowCount="4"
            android:columnCount="3"
            android:layout_marginTop="8dp"
            android:paddingStart="46dp"
            android:layout_marginBottom="12dp">

            <!-- Grid items for dialer buttons -->
            <Button
                android:text="1"
                style="@style/DialerButton" />

            <Button
                android:text="2"
                style="@style/DialerButton" />

            <Button
                android:text="3"
                style="@style/DialerButton" />

            <Button
                android:text="4"
                style="@style/DialerButton" />

            <Button
                android:text="5"
                style="@style/DialerButton" />

            <Button
                android:text="6"
                style="@style/DialerButton" />

            <Button
                android:text="7"
                style="@style/DialerButton" />

            <Button
                android:text="8"
                style="@style/DialerButton" />

            <Button
                android:text="9"
                style="@style/DialerButton" />

            <Button
                android:text="*"
                style="@style/DialerButton"/>

            <Button
                android:text="0"
                style="@style/DialerButton" />

            <Button
                android:id="@+id/backspaceButton"
                android:text="#"
                style="@style/DialerButton"
                android:onClick="onBackspaceClick" />
        </GridLayout>

        <ImageButton
            android:id="@+id/callButton"
            android:layout_width="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_height="64dp"
            android:layout_below="@id/gridlayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_call"
           />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>